@using MVCDBSTOK.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TblKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var kategori in Model)
        {
            <tr>
                <th>@kategori.KategoriId</th>
                <td>@kategori.KategoriAd</td>
                <td><a href="/KATEGORI/KategoriSil/@kategori.KategoriId" class="btn btn-danger">Sil</a></td>
                <td><a href="/KATEGORI/KategoriGuncelle/@kategori.KategoriId" class="btn btn-success">Guncelle</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/KATEGORI/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>
